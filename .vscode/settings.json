{
    "plpgsqlLanguageServer.host": "localhost",
    "plpgsqlLanguageServer.port": 5432,
    "plpgsqlLanguageServer.database": "",
    "plpgsqlLanguageServer.user": "postgres",
    "plpgsqlLanguageServer.password": "postgres",
    "plpgsqlLanguageServer.definitionFiles": [
      // Support glob.
      "**/*.sql",
      "**/*.psql",
      "**/*.pgsql"
    ],
    // The supported extention types are ['*.pgsql', '*.psql'].
    // If you want to use this extension in '*.sql', add the following settings.
    "files.associations": {
      "*.sql": "postgres"
    }
  }